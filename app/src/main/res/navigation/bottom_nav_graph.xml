<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/overviewFragment">

    <fragment
        android:id="@+id/overviewFragment"
        android:name="edu.teco.esensecompanion.overview.OverviewFragment"
        android:label="@string/app_name"
        tools:layout="@layout/overview_fragment">
        <action
            android:id="@+id/action_overviewFragment_to_deviceFragment"
            app:destination="@id/deviceFragment">
            <argument
                android:name="name"
                android:defaultValue="e-Sense device"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/deviceFragment"
        android:name="edu.teco.esensecompanion.overview.device.DeviceFragment"
        android:label="{name}"
        tools:layout="@layout/device_fragment">
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/sensorDataOverviewFragment"
        android:name="edu.teco.esensecompanion.sensordata.SensorDataOverviewFragment"
        android:label="Data"
        tools:layout="@layout/sensor_data_overview_fragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="edu.teco.esensecompanion.settings.SettingsFragment"
        android:label="Settings" />
</navigation>