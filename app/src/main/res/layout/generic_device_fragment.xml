<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="edu.teco.earablecompanion.overview.device.generic.GenericDeviceViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/generic_heart_rate_enabled_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:enabled="@{vm.heartRateSupported}"
                android:text="@string/generic_heart_rate_enabled_text"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintBottom_toBottomOf="@id/generic_heart_rate_enabled_switch"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/generic_heart_rate_enabled_switch" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/generic_heart_rate_enabled_switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:checked="@{vm.device.config.heartRateEnabled}"
                android:enabled="@{vm.heartRateSupported}"
                app:layout_constraintStart_toEndOf="@id/generic_heart_rate_enabled_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/generic_body_temperature_enabled_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:enabled="@{vm.bodyTemperatureSupported}"
                android:text="@string/generic_body_temperature_enabled_text"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintBottom_toBottomOf="@id/generic_body_temperature_enabled_switch"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/generic_body_temperature_enabled_switch" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/generic_body_temperature_enabled_switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:checked="@{vm.device.config.bodyTemperatureEnabled}"
                android:enabled="@{vm.bodyTemperatureSupported}"
                app:layout_constraintStart_toEndOf="@id/generic_body_temperature_enabled_text"
                app:layout_constraintTop_toBottomOf="@id/generic_heart_rate_enabled_switch" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>