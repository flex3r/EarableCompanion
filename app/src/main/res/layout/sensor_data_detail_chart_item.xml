<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="edu.teco.earablecompanion.sensordata.detail.SensorDataDetailItem.Chart" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/sensor_data_detail_chart_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="@string/sensor_data_detail_chart_icon_description"
                android:src="@drawable/ic_baseline_insert_chart_24"
                app:layout_constraintBottom_toBottomOf="@id/sensor_data_detail_chart_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/sensor_data_detail_chart_title"
                app:tint="?attr/colorSecondary" />

            <TextView
                android:id="@+id/sensor_data_detail_chart_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:dataTypeTitle="@{item.type}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/sensor_data_detail_chart"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:dataEntries="@{item.data}"
                app:dataType="@{item.type}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/sensor_data_detail_chart_title"
                app:layout_constraintStart_toStartOf="@id/sensor_data_detail_chart_title"
                app:layout_constraintTop_toBottomOf="@id/sensor_data_detail_chart_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>